{
  "name": "sig-manager-pro",
  "version": "1.6.5",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000",
    "dev:legacy-static": "npx serve .",
    "build:prepare": "node scripts/prepare-dist.mjs",
    "build": "npm run build:prepare && ./node_modules/esbuild/bin/esbuild index.tsx --bundle --outdir=dist --format=esm --jsx=automatic --minify --external:react --external:react-dom/* --external:lucide-react --external:recharts --external:firebase/*",
    "build:watch": "npm run build:prepare && ./node_modules/esbuild/bin/esbuild index.tsx --bundle --outdir=dist --format=esm --jsx=automatic --external:react --external:react-dom/* --external:lucide-react --external:recharts --external:firebase/* --watch",
    "preview": "concurrently -k -n BUILD,SERVER -c magenta,cyan \"npm run build:watch\" \"npm start\"",
    "start": "node server.js"
  },
  "dependencies": {
    "esbuild": "0.24.2",
    "express": "4.22.1",
    "firebase": "11.0.2",
    "lucide-react": "0.460.0",
    "mammoth": "^1.11.0",
    "pdfjs-dist": "4.10.38",
    "pptx-preview": "^1.0.7",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "recharts": "2.15.4",
    "serve": "14.2.3",
    "xlsx": "0.18.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.2.1",
    "typescript": "5.7.2",
    "vite": "^7.1.3"
  }
}
